<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title || "The Privy" %></title>
  <!-- Bootstrap 5.3+ -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />

  <!-- Bootstrap Icons -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    rel="stylesheet"
  />

  <link rel="icon" href="/images/favicon.ico" sizes="any" />
  <link rel="icon" type="image/svg+xml" href="/images/favicon.svg" />
  <link rel="apple-touch-icon" href="/images/apple-touch-icon.png" />
  <link rel="icon" type="image/svg+xml" href="/images/favicon-64.png" />
  <link rel="stylesheet" href="/css/style.css">


</head>

<body class="bg-body text-body d-flex flex-column min-vh-100">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg border-bottom bg-body-tertiary">
    <div class="container d-flex justify-content-between align-items-center">
      <a class="navbar-brand fw-bold text-primary" href="/">
        <!-- SVG emblem -->
          <svg
            class="privy-icon"
            width="38" height="38"
            viewBox="0 0 24 24"
            role="img"
            aria-label="The Privy logo"
            xmlns="http://www.w3.org/2000/svg"
          >
            <title>The Privy</title>

            <!-- Shield outline -->
            <path
              d="M12 2l6 3v5c0 4-3 7.5-6 9-3-1.5-6-5-6-9V5l6-3z"
              fill="none"
              stroke="currentColor"
              stroke-width="1.6"
              stroke-linejoin="round"
              stroke-linecap="round"
            />

            <!-- Filled inner shield for a bolder mark (optional) -->
            <path
              d="M12 3.3l4.8 2.4v4.2c0 3.2-2.4 5.9-4.8 7-2.4-1.1-4.8-3.8-4.8-7V5.7L12 3.3z"
              fill="currentColor"
              opacity="0.08"
            />

            <!-- Keyhole (circle + stem) -->
            <g transform="scale(1.4) translate(-3.5, -2.8)">
              <circle cx="12" cy="9.3" r="1.05" fill="currentColor" />
              <rect x="11.15" y="10.4" width="1.7" height="3.2" rx="0.8" fill="currentColor" />
            </g>
          </svg>
          <span class="fw-semibold text-decoration-none">The Privy</span>
        </a>

      <div class="d-flex align-items-center gap-3">
        <!-- ðŸŒ— Theme Toggle Button -->
        <button
          id="themeToggleBtn"
          class="btn btn-outline-secondary btn-sm border-0"
          type="button"
          title="Toggle theme"
        >
          <i id="themeIcon" class="bi bi-moon-fill fs-5"></i>
        </button>

        <!-- Auth Links -->
        <% if (user) { %>
          <span class="text-secondary small">Hi, <%= user.username %></span>
          <a href="/auth/logout" class="nav-link d-inline">Logout</a>
        <% } else { %>
          <a href="/auth/login" class="nav-link d-inline">Login</a>
          <a href="/auth/signup" class="nav-link d-inline">Sign Up</a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- Main content -->
  <main class="container flex-grow-1 py-4">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="border-top py-3 mt-auto bg-body-tertiary">
    <div class="container text-center text-secondary small">
      &copy; <%= new Date().getFullYear() %> The Privy Â· A Members-Only Project | 
      <a
        href="https://github.com/furkanssarri"
        target="_blank"
        rel="noopener noreferrer"
  class="m-1 text-decoration-none text-body d-inline-flex align-items-center footer-github-link"
        aria-label="Open GitHub profile of furkanssarri in a new tab"
      >
        <i class="fa-brands fa-github"></i>
        furkanssarri
      </a>
    </div>
  </footer>

  <!-- Fontawesome -->
  <script src="https://kit.fontawesome.com/a4cf3a1ade.js" crossorigin="anonymous"></script>


  <!-- Bootstrap JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" 
    crossorigin="anonymous"
  ></script>

  <!-- ðŸŒ™ Theme Logic -->
  <script>
    const prefersDark = window.matchMedia("(prefers-color-scheme: dark)");
    const root = document.documentElement;
    const themeBtn = document.getElementById("themeToggleBtn");
    const themeIcon = document.getElementById("themeIcon");

    // Load saved theme or OS preference
    const savedTheme = localStorage.getItem("theme");
    const currentTheme = savedTheme || (prefersDark.matches ? "dark" : "light");
    root.setAttribute("data-bs-theme", currentTheme);
    themeIcon.className =
      currentTheme === "dark" ? "bi bi-sun-fill fs-5" : "bi bi-moon-fill fs-5";

    // Toggle theme with animation
    themeBtn.addEventListener("click", () => {
      themeIcon.classList.add("rotate"); // animation class
      const newTheme =
        root.getAttribute("data-bs-theme") === "dark" ? "light" : "dark";
      root.setAttribute("data-bs-theme", newTheme);
      themeIcon.className =
        newTheme === "dark" ? "bi bi-sun-fill fs-5" : "bi bi-moon-fill fs-5";
      localStorage.setItem("theme", newTheme);
      setTimeout(() => themeIcon.classList.remove("rotate"), 300);
    });

    // Auto-detect OS theme changes if user didnâ€™t override
    prefersDark.addEventListener("change", (e) => {
      if (!localStorage.getItem("theme")) {
        const newTheme = e.matches ? "dark" : "light";
        root.setAttribute("data-bs-theme", newTheme);
        themeIcon.className =
          newTheme === "dark" ? "bi bi-sun-fill fs-5" : "bi bi-moon-fill fs-5";
      }
    });
  </script>
</body>
</html>
